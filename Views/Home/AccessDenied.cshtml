@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Access Denied
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">You don't have permission to access this resource.</h5>
                    <p class="text-muted">Please log in with administrator credentials to continue.</p>
                </div>
                
                <div class="d-grid gap-2 d-md-block">
                    <a asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 