@model IEnumerable<StageursApp.Models.Etudiant>

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-info mb-3">
            <i class="fas fa-user-graduate me-2"></i>Students Management
        </h1>
        <p class="lead text-muted">View and manage all students in the system</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Students List (@Model.Count())
                </h5>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a asp-controller="Etudiant" asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-2"></i>Add New Student
                    </a>
                }
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-image me-2"></i>Photo</th>
                                    <th><i class="fas fa-user me-2"></i>Student Name</th>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <th><i class="fas fa-id-card me-2"></i>National ID</th>
                                        <th><i class="fas fa-envelope me-2"></i>Email</th>
                                    }
                                    <th><i class="fas fa-user-tie me-2"></i>Supervisor</th>
                                    <th><i class="fas fa-layer-group me-2"></i>Section</th>
                                    <th><i class="fas fa-university me-2"></i>Faculty</th>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var e in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(e.PhotoPath))
                                            {
                                                <img src="@e.PhotoPath" alt="Student photo" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                    <i class="fas fa-user-graduate text-muted"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <i class="fas fa-user-graduate text-info me-2"></i>
                                            <span class="fw-medium">@e.Prenom @e.Nom</span>
                                        </td>
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                                            <td>
                                                <span class="badge bg-secondary rounded-pill">
                                                    <i class="fas fa-id-card me-1"></i>
                                                    @e.IdentificationCardNumber
                                                </span>
                                            </td>
                                            <td>
                                                <a href="mailto:@e.Email" class="text-decoration-none">
                                                    <i class="fas fa-envelope text-primary me-1"></i>
                                                    @e.Email
                                                </a>
                                            </td>
                                        }
                                        <td>
                                            <span class="badge bg-warning text-dark rounded-pill">
                                                <i class="fas fa-user-tie me-1"></i>
                                                @(e.Encadreur != null ? $"{e.Encadreur.Prenom} {e.Encadreur.Nom}" : "Not assigned")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success rounded-pill">
                                                @e.Section?.Nom
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary rounded-pill">
                                                @e.Section?.Faculty?.Nom
                                            </span>
                                        </td>
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-outline-primary btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="PreviewBadge" asp-route-id="@e.Id" class="btn btn-outline-secondary btn-sm" title="Preview Badge">
                                                        <i class="fas fa-id-badge"></i>
                                                    </a>
                                                    <a asp-action="DownloadBadge" asp-route-id="@e.Id" class="btn btn-outline-info btn-sm" title="Download Badge">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <a asp-action="PrintBadge" asp-route-id="@e.Id" class="btn btn-outline-success btn-sm" title="Print Badge" target="_blank">
                                                        <i class="fas fa-print"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">No Students Found</h4>
                        <p class="text-muted">@if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) { <text>Start by adding your first student to the system.</text> } else { <text>Contact an administrator to add students.</text> }</p>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-controller="Etudiant" asp-action="Create" class="btn btn-info">
                                <i class="fas fa-plus me-2"></i>Add First Student
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Etudiant" asp-action="Create" class="btn btn-info w-100">
                                <i class="fas fa-user-plus me-2"></i>Add Student
                            </a>
                        </div>
                    }
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Admin" asp-action="Encadreurs" class="btn btn-outline-warning w-100">
                            <i class="fas fa-user-tie me-2"></i>Manage Supervisors
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Admin" asp-action="Sections" class="btn btn-outline-success w-100">
                            <i class="fas fa-layer-group me-2"></i>Manage Sections
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
