@model StageursApp.Models.Etudiant

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-danger mb-3">
            <i class="fas fa-trash me-2"></i>Delete Student
        </h1>
        <p class="lead text-muted">Are you sure you want to delete this student?</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. The student will be permanently removed from the system.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-user-graduate me-2"></i>Student Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Prenom @Model.Nom</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope text-primary me-1"></i>
                                    @Model.Email
                                </a>
                            </dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-phone text-success me-1"></i>
                                @Model.Telephone
                            </dd>

                            <dt class="col-sm-4">Start Date:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-calendar-plus text-info me-1"></i>
                                @(Model.StartDate?.ToString("MMM dd, yyyy") ?? "Not set")
                            </dd>

                            <dt class="col-sm-4">End Date:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-calendar-minus text-warning me-1"></i>
                                @(Model.EndDate?.ToString("MMM dd, yyyy") ?? "Not set")
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-info-circle me-2"></i>Additional Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-4">Supervisor:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-warning text-dark rounded-pill">
                                    <i class="fas fa-user-tie me-1"></i>
                                    @(Model.Encadreur != null ? $"{Model.Encadreur.Prenom} {Model.Encadreur.Nom}" : "Not assigned")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Section:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success rounded-pill">
                                    @(Model.Section?.Nom ?? "Not assigned")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Faculty:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary rounded-pill">
                                    @(Model.Section?.Faculty?.Nom ?? "Not assigned")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Photo Path:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-image text-secondary me-1"></i>
                                @(Model.PhotoPath ?? "Not set")
                            </dd>

                            <dt class="col-sm-4">Badge Path:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-id-badge text-secondary me-1"></i>
                                @(Model.BadgePath ?? "Not set")
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Student
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 