@model StageursApp.Models.Etudiant
@{
    ViewData["Title"] = "Ajouter un Stagiaire";
    var encadreurs = ViewBag.Encadreurs as List<StageursApp.Models.Encadreur>;
    var sections = ViewBag.Sections as List<StageursApp.Models.Section>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Nom</label>
        <input asp-for="Nom" class="form-control" />
    </div>
    <div>
        <label>Prénom</label>
        <input asp-for="Prenom" class="form-control" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div>
        <label>Téléphone</label>
        <input asp-for="Telephone" class="form-control" />
    </div>
    <div>
        <label>Date début</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div>
        <label>Date fin</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div>
        <label>Encadreur</label>
        <select asp-for="EncadreurId" class="form-control">
            @foreach (var e in encadreurs)
            {
                <option value="@e.Id">@e.Nom @e.Prenom</option>
            }
        </select>
    </div>
    <div>
        <label>Section</label>
        <select asp-for="SectionId" class="form-control">
            @foreach (var s in sections)
            {
                <option value="@s.Id">@s.Nom - @s.Faculty.Nom</option>
            }
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Ajouter</button>
</form>
