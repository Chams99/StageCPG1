@{
    ViewData["Title"] = "Generate All Badges";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-primary mb-3">
            <i class="fas fa-id-badge me-2"></i>Generate All Badges
        </h1>
        <p class="lead text-muted">Generate badges for all students in the system</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs me-2"></i>Badge Generation Results
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.SuccessCount != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Success:</strong> @ViewBag.SuccessCount badges generated successfully
                    </div>
                }

                @if (ViewBag.ErrorCount != null && ViewBag.ErrorCount > 0)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Errors:</strong> @ViewBag.ErrorCount badges failed to generate
                    </div>
                }

                @if (ViewBag.Results != null && ViewBag.Results.Count > 0)
                {
                    <div class="mt-4">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-exclamation-circle me-2"></i>Error Details
                        </h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Student</th>
                                        <th>Error</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in ViewBag.Results)
                                    {
                                        <tr>
                                            <td>@result.student.Prenom @result.student.Nom</td>
                                            <td class="text-danger">@result.error</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-center">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                            <form asp-action="GenerateMissingBadges" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning me-2" onclick="return confirm('Generate badges for students who don\'t have one yet?')">
                                    <i class="fas fa-sync-alt me-2"></i>Generate Missing Badges
                                </button>
                            </form>
                            <a asp-action="GenerateAllBadges" class="btn btn-primary">
                                <i class="fas fa-redo me-2"></i>Regenerate All Badges
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 