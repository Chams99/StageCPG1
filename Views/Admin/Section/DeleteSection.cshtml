@model StageursApp.Models.Section

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-danger mb-3">
            <i class="fas fa-trash me-2"></i>Delete Section
        </h1>
        <p class="lead text-muted">Are you sure you want to delete this section?</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. The section will be permanently removed from the system.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-layer-group me-2"></i>Section Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-4">Section Name:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success rounded-pill">
                                    <i class="fas fa-layer-group me-1"></i>
                                    @Model.Nom
                                </span>
                            </dd>

                            <dt class="col-sm-4">Section ID:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary rounded-pill">
                                    <i class="fas fa-hashtag me-1"></i>
                                    @Model.Id
                                </span>
                            </dd>

                            <dt class="col-sm-4">Faculty:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary rounded-pill">
                                    <i class="fas fa-university me-1"></i>
                                    @(Model.Faculty?.Nom ?? "Not assigned")
                                </span>
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-info-circle me-2"></i>Impact Information
                        </h6>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> Deleting this section will also affect all students associated with it.
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Sections" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <form asp-action="DeleteSection" method="post" style="display: inline;">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Section
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 