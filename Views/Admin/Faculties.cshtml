@model List<StageursApp.Models.Faculty>

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 text-primary mb-3">
            <i class="fas fa-university me-2"></i>Faculties Management
        </h1>
        <p class="lead text-muted">Add and manage faculties in the system</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>Add New Faculty
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="AddFaculty" method="post">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Faculty Name</label>
                        <input name="nom" id="nom" placeholder="Enter faculty name" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-plus me-2"></i>Add Faculty
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-8 col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Current Faculties (@Model.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var f in Model)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-university text-primary me-2"></i>
                                    <span class="fw-medium">@f?.Nom</span>
                                </div>
                                <span class="badge bg-success rounded-pill">
                                    <i class="fas fa-check me-1"></i>Active
                                </span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-university text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No faculties found. Add your first faculty to get started.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Admin" asp-action="Sections" class="btn btn-outline-success w-100">
                            <i class="fas fa-layer-group me-2"></i>Manage Sections
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Admin" asp-action="Encadreurs" class="btn btn-outline-warning w-100">
                            <i class="fas fa-user-tie me-2"></i>Manage Encadreurs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
